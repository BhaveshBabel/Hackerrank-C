#include <stdio.h>
#include <string.h>

int find_nth_term(int n, int a, int b, int c) {
    int i, sum1 = 0, sum2 = 0;

    for(i = 0; i < n; i++){
        sum1 = a + b + c;
        sum2 = sum1 + b + c;
        
    }
    return sum2;
    
}

int main() {
    int n, a, b, c;
  
    scanf("%d %d %d %d", &n, &a, &b, &c);
    int ans = find_nth_term(n, a, b, c);
 
    printf("%d", ans); 
    return 0;
}

